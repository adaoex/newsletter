<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset>
		<field name="name"
			type="text"
			label="COM_NEWSLETTER_NAME"
			description=""
			class="inputbox validate-name"
			size="30"
			default=""
			required="true"
            validate="username"
		/>

		<field name="email"
			type="email"
			label="JGLOBAL_EMAIL"
			description=""
			class="inputbox validate-email"
			size="30"
			default=""
			required="true"
                        validate="subemail"
                        unique="true"
		 />
		<field
            name="html"
			type="radio"
			default="1"
			label="COM_NEWSLETTER_HTML"
			description=""
			class="inputbox"
			size="30"
			required="true"
		 >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
		 </field>

		<field
            name="type"
			type="subscriberTypes"
			label="COM_NEWSLETTER_SUBSCRIBER_TYPE"
			description="COM_NEWSLETTER_SUBSCRIBER_TYPE"
			class="inputbox"
			required="true"
		/>

		<field name="subscriber_id" type="hidden" />
		
		<field 
			name="confirmed" 
			type="hidden" 
			default="1"
		/>
	</fieldset>
</form>
